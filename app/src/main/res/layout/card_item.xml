<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    tools:context=".ui.activity.StartActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="false"
        card_view:contentPaddingLeft="4dp"
        card_view:contentPaddingRight="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/home_card_image_small"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/home_card_name"
                android:layout_alignBottom="@+id/home_card_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_crop_original_black_24dp" />

            <TextView
                android:id="@+id/home_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/home_card_image_small"
                android:text="RRRRR"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_card_title"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_below="@+id/home_card_image_small"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/card_card_image"
                android:text="Новости....Новости...Новости..yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_card_image"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:cropToPadding="true"
                android:paddingLeft="2dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/home_card_image"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_crop_original_black_24dp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/home_card_publishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="55 минут назад"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/home_card_more_vert_action"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@+id/home_card_publishedAt"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                app:srcCompat="@drawable/ic_more_vert_black_24dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>

